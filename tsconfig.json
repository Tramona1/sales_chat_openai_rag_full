{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "noEmit": false,
    "outDir": "./dist",
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2018"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "utils/**/*.ts",
    "scripts/process_crawl_and_store.ts",
    "scripts/jsconfig.json",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "types/**/*.ts",
    "lib/**/*.ts",
    "config/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "stagehand",
    "scripts/archive",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

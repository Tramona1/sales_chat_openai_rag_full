{
  "framework": "nextjs",
  "buildCommand": "npm install --force && npx tailwindcss init -p && npm run build",
  "installCommand": "npm install --force",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "includeFiles": [".env.local", ".env"]
      }
    }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  }
} 